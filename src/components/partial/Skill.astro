---
import Link from "./Link.astro";
const { name, url } = Astro.props;
---

{url ? 
<Link href={ url } target="_blank">
  <div class="relative group/skill inline-block pb-5">
    <!-- Skill Label -->
    <span class="cursor-pointer text-nowrap px-4 py-2 bg-[#F8F36F] text-dark rounded-full">
      {name}
    </span>

    <!-- Certificate Preview -->
    <div class="absolute left-1/2 top/-full mt-4 w-54 -translate-x-1/2 rounded-lg border border-gray-300 bg-white p-0.5 shadow-lg opacity-0 group-hover/skill:opacity-100 pointer-events-none transition-opacity duration-300 z-50">
      <img src={url} alt={`Certificate for ${name}`} class="w-full h-auto rounded" />
    </div>
  </div>
</Link>
: 
<div class="relative group/skill inline-block pb-5">
  <!-- Skill Label -->
  <span class="text-nowrap px-4 py-2 bg-gray-800 text-gray-400 rounded-full">
    {name}
  </span>
</div>
}
