<script>
  // Toggle popup visibility
  const searchButton = document.getElementById('searchButton') as HTMLButtonElement;
  const searchPopup = document.getElementById('searchPopup') as HTMLDivElement;
  const closePopup = document.getElementById('closePopup') as HTMLButtonElement;
  const submitButton = document.getElementById('submitButton') as HTMLButtonElement;
  const input = document.getElementById('searchInput') as HTMLInputElement;

  searchButton.addEventListener('click', () => {
    setTimeout(() => input.focus(), 0);
    searchPopup.classList.remove('hidden');
  });

  closePopup.addEventListener('click', () => {
    searchPopup.classList.add('hidden');
  });

  searchPopup.addEventListener('click', (e: MouseEvent) => {
      if (e.target === searchPopup) {
          searchPopup.classList.add('hidden');
      }
  });

  submitButton.addEventListener('click', () => {
      const searchInput = searchPopup.querySelector('input') as HTMLInputElement;
      if (searchInput.value.trim() !== '') {
      // Handle search submission logic here
      console.log(`Searching for: ${searchInput.value}`);
      searchPopup.classList.add('hidden');
      }
  });

  document.addEventListener('keydown', (e: KeyboardEvent) => {
      const searchInput = searchPopup.querySelector('input') as HTMLInputElement;
      if ( e.key === 'Enter' && searchInput.value.trim() !== '') {
          console.log(`Searching for: ${searchInput.value}`);
          searchPopup.classList.add('hidden');
      }
  });

  document.addEventListener('keydown', (e: KeyboardEvent) => {
      if ( e.key === 'Escape') {
          searchPopup.classList.add('hidden');
      }
  });

  document.addEventListener('keydown', function(event) {
    if (event.ctrlKey && event.key.toLowerCase() === 'k') {
      event.preventDefault(); // optional: prevents browser default like search or link focus
      setTimeout(() => input.focus(), 0);
      searchPopup.classList.remove('hidden');
    }
  });
</script>