<!-- From Uiverse.io by tirth_5172 -->
<button
  class="pointer-events-auto relative cursor-pointer py-2 px-4 text-center font-barlow inline-flex justify-center text-base uppercase text-black dark:text-white 
    rounded-lg border-solid transition-transform duration-300 ease-in-out group outline-offset-4 
    focus:outline-2 focus:outline-black dark:focus:outline-white focus:outline-offset-4 overflow-hidden"
>
  <span class="relative z-20 text-[10px]"> <slot /> </span>

  <!-- Hover sheen -->
  <span
    class="absolute left-[-75%] top-0 h-full w-[50%] bg-black/10 dark:bg-white/20 rotate-12 z-10 blur-lg group-hover:left-[125%] transition-all duration-1000 ease-in-out"
  ></span>

  <!-- Border segments with theme support -->
  <span
    class="w-1/2 drop-shadow-3xl transition-all duration-300 block 
      border-black/10 dark:border-white/20 absolute h-[20%] 
      rounded-tl-lg border-l-2 border-t-2 top-0 left-0"
  ></span>
  <span
    class="w-1/2 drop-shadow-3xl transition-all duration-300 block 
      border-black/10 dark:border-white/20 absolute 
      group-hover:h-[90%] h-[60%] rounded-tr-lg border-r-2 border-t-2 top-0 right-0"
  ></span>
  <span
    class="w-1/2 drop-shadow-3xl transition-all duration-300 block 
      border-black/10 dark:border-white/20 absolute 
      h-[60%] group-hover:h-[90%] rounded-bl-lg border-l-2 border-b-2 left-0 bottom-0"
  ></span>
  <span
    class="w-1/2 drop-shadow-3xl transition-all duration-300 block 
      border-black/10 dark:border-white/20 absolute 
      h-[20%] rounded-br-lg border-r-2 border-b-2 right-0 bottom-0"
  ></span>
</button>
