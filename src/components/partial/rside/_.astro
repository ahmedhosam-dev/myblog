---
import Link from "../Link.astro";
import SocialLinks from "./SocialLinks.astro";
import Tag from "./Tag.astro";

const allPosts = Object.values(import.meta.glob('../../../content/blog/*.md', { eager: true }));
const uniqueTags = [... new Set(allPosts.map((post: any) => post.frontmatter.tags).flat())];
---

<div class="rside">
  <div></div>
  <div class="rounded-md border-l-2 border-dark dark:border-light pt-5 pb-5">
    <div class="pl-5 pr-5">
      <h1 class="mb-5 pb-2 border-b-2 text-center font-medium">Tags</h1>
      <div class="flex flex-wrap gap-2 pointer-events-auto">
        {uniqueTags.map((tag) => (
          <Link href={`/tags/${tag}`} class="text-sm">
            <Tag>{tag}</Tag>
          </Link>
        ))}
      </div>
    </div>
  </div>
  <div class="pointer-events-auto">
    <SocialLinks />
  </div>
</div>
