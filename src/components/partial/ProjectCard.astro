---
const { repo } = Astro.props;
---
<div class="rounded-md border-[2px] border-dark p-5 text-dark shadow-2xs
          transform-none hover:[&:nth-child(odd)]:skew-1 hover:[&:nth-child(even)]:-skew-1 duration-200 hover:shadow-2xl 
          dark:border-light dark:text-light dark:shadow-blue-800">
  <div class="flex flex-row justify-between gap-10">
    <div class="flex flex-col">
      <h2 class="font-bold">{repo.name || ""}</h2>
      <p class="font-normal max-w-lg text-warp wrap-break-word">{repo.description || ""}</p>
    </div>
    <div class="flex flex-row gap-5">
      <a href={repo.html_url || ""} target="_blank"><i class="fa-brands fa-github text-dark dark:text-light hover:text-sky-400"></i></a>
      {repo.homepage && 
        <a href={repo.homepage ? "https://ahmedhosam-dev.github.io/" + repo.name : ""} target="_blank"><i class="fa-solid fa-arrow-up-right-from-square text-dark dark:text-light hover:text-sky-400"></i></a>
      }
    </div>
  </div>
  <div class="mt-3 flex flex-row gap-2 text-[12px] font-medium text-dark">
    <div class="rounded-full border-[1px] dark:border-light border-dark bg-blue-800 dark:bg-blue-950 px-3 py-1 text-light">{repo.language || "NONE"}</div>
    <div class="rounded-full bg-blue-100 px-3 py-1">{repo.forks_count || 0}</div>
    <div class="rounded-full bg-blue-100 px-3 py-1">{repo.stargazers_count || 0}</div>
  </div>
</div>
</div>
</a>